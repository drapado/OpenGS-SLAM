// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
	"name": "ABE CUDA-OpenGL Devcontainer",
	"build": {
		"dockerfile": "./Dockerfile",
		"args": {
			"BASE_IMAGE": "nvidia/cuda:11.8.0-cudnn8-devel-ubuntu20.04"
		},
		"context": ".."
	},
	"forwardPorts": [
		5801
	],
	"portsAttributes": {
		"5801": {
			"label": "desktop",
			"onAutoForward": "openBrowser"
		}
	},
	"mounts": [
	],
    "runArgs": [
        "--gpus",
        "all",
        // "--name",
        // "dl-gpu-devcontainer",
        // "--shm-size=8g", // Adjust the size as needed
        // "--ipc=host"
    ],
	// "remoteEnv": {
	// },
	"postCreateCommand": "bash /opt/entrypoint.sh /bin/true; bash .devcontainer/post-create.sh",
	"remoteUser": "abe",
	"updateRemoteUserUID": true,
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.vscode-pylance",
                "ms-python.python",
                "ms-toolsai.jupyter",
                "GitHub.copilot",
                "charliermarsh.ruff",
                "eamodio.gitlens"
			]
		}
	},
	"hostRequirements": {
		"gpu": "optional",
		"cpus": 2,
		"memory": "8gb"
	}
}